@page
@model RegisterModel

@ViewData["Success"]

<form method="post">
    <div class="container text-center">
        <div class="row">
            <div class="col">
            </div>

            <div class="col-md-auto">
                @{
                    if (ViewData.ContainsKey(RegisterModel.VIEW_DATA_RESULT_MSG_KEY))
                    {
                        <p style="color: red">@ViewData[RegisterModel.VIEW_DATA_RESULT_MSG_KEY]</p>
                    }
                }

                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input class="form-control" type="email" asp-for="@Model.Email" />
                </div>

                <div class="mb-3">
                    <label for="Username" class="form-label">Username</label>
                    <input class="form-control" type="text" asp-for="@Model.Username" />
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input class="form-control" type="password" asp-for="@Model.Password" />
                </div>

                <div class="d-grid">
                    <input class="btn btn-primary" type="submit" id="registerButton" value="Register" />
                </div>
                
            </div>

            <div class="col">
            </div>
        </div>
